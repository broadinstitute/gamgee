project gamgee
    : requirements 
        <cxxflags>-std=c++1y
        <linkflags>-std=c++1y
        <warnings-as-errors>on
  ;

  use-project /gamgee/libs : lib ;

  variant production
    : <inlining>on <optimization>speed
  ;

  lib gamgee 
    : [ glob-tree *.cpp : .git test lib bin dox build ] /gamgee/libs//hts
    : <link>static 
    : <variant>production
    : <include>.
  ;
